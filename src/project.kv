#:kivy 1.7.1
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import Factory kivy.factory.Factory

<Screen>:
    canvas:
        Color:
            rgb: .2, .2, .2
        Rectangle:
            size: self.size


<MutableLabelTextInput@MutableTextInput>:
    Label:
        id: w_label
        pos: root.pos
        text: root.text

    TextInput:
        id: w_textinput
        pos: root.pos
        text: root.text
        multiline: root.multiline
        on_focus: root.check_focus_and_view(self)


<MutableRstDocumentTextInput@MutableTextInput>:
    RstDocument:
        id: w_label
        pos: root.pos
        text: root.text

    TextInput:
        id: w_textinput
        pos: root.pos
        text: root.text
        multiline: root.multiline
        on_focus: root.check_focus_and_view(self)


<QuickView>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            padding: '5dp'
            canvas:
                Color:
                    rgb: .3, .3, .3
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: '<'
                size_hint_x: None
                width: self.height
                on_release: app.go_projects(-1)

            Label:
                text: '3PM - Quick Session'
                font_size: '16sp'

        MutableRstDocumentTextInput:
            text: root.project_content
            on_text: root.project_content = self.text

        GridLayout:
            height: '48dp'
            rows: 2
            padding: 10
            spacing: 10
            GridLayout:
                size: root.size
                rows: 1
                padding: 10
                spacing: 10

                Label:
                    font_size: '32sp'
                    text: app.timer.time_string
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

            GridLayout:
                size: root.size
                rows: 1
                padding: 10
                spacing: 10

                Button:
                    text: 'Start Session'
                    on_press: app.start_work(-1)

                Button:
                    text: 'Stop Session'
                    on_press: app.stop_work(-1)

<ProjectView>:
    on_project_content: app.set_project_content(self.project_index, self.project_content)
    on_project_title: app.set_project_title(self.project_index, self.project_title)
    on_project_estimated: app.set_project_estimated(self.project_index, self.project_estimated)

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            padding: '5dp'

            canvas:
                Color:
                    rgb: .3, .3, .3
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: '<'
                size_hint_x: None
                width: self.height
                on_release: app.go_projects(root.project_index)

            MutableLabelTextInput:
                text: root.project_title
                font_size: '16sp'
                multiline: False
                on_text: root.project_title = self.text

            Button:
                text: 'Delete Project'
                size_hint_x: None
                width: 3*self.height
                on_release: app.delete_project(root.project_index)

            Button:
                text: 'Finish Project'
                size_hint_x: None
                width: 3*self.height
                on_release: app.finish_project(root.project_index)

        MutableRstDocumentTextInput:
            text: root.project_content
            on_text: root.project_content = self.text

        GridLayout:
            height: '48dp'
            rows: 2
            padding: 10
            spacing: 10
            GridLayout:
                size: root.size
                rows: 1
                padding: 10
                spacing: 10

                Label:
                    font_size: '32sp'
                    text: app.timer.time_string
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

                Label:
                    font_size: '16sp'
                    text: app.timer.logged_string
                    halign: 'center'
                    valign: 'middle'

                MutableLabelTextInput:
                    font_size: '16sp'
                    multiline: False
                    on_text: root.project_estimated = self.text
                    text: str("%i" % root.project_estimated)
                    halign: 'center'
                    valign: 'middle'

            GridLayout:
                size: root.size
                rows: 1
                padding: 10
                spacing: 10
                Button:
                    text: 'Start Session'
                    on_press: app.start_work(root.project_index)
                Button:
                    text: 'Stop Session'
                    on_press: app.stop_work(root.project_index)

<ProjectListItem>:
    height: '48sp'
    size_hint_y: None

    canvas:
        Color:
            rgb: .3, .3, .3
        Rectangle:
            pos: self.pos
            size: self.width, 1

    BoxLayout:
        padding: '5dp'

        Label:
            text: root.project_title

        Label:
            text: str("(%.1f/%i)" % (root.project_logged, root.project_estimated))

        Button:
            text: 'Start'
            size_hint_x: None
            width: 1.2*self.height
            on_release: app.edit_project(root.project_index); app.start_work(root.project_index)

        Button:
            text: '>'
            size_hint_x: None
            width: self.height
            on_release: app.edit_project(root.project_index)

<Projects>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            padding: '5dp'

            canvas:
                Color:
                    rgb: .3, .3, .3
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: 'data/icon.png'
                mipmap: True
                size_hint_x: None
                width: self.height

            Button:
                text: 'New Project...'
                size_hint_x: None
                width: 2.8*self.height
                on_release: app.add_project()

            Button:
                text: 'Settings'
                size_hint_x: None
                width: 1.8*self.height
                on_release: app.open_settings()

            Label:
                text: '3PM'
                font_size: '16sp'

            Button:
                text: 'Quick Session >'
                size_hint_x: None
                width: 3.1*self.height
                on_release: app.quick_session()

        ListView:
            adapter: ListAdapter(data=root.data, cls=Factory.ProjectListItem, args_converter=root.args_converter)
