<MainWidget>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Start Session'
            on_press: root.start()
            # Choose an image and uncomment:
            #background_down: 'button_pressed.png'
            #background_normal: 'button_normal.png'
            #color: [0, 0, 0, 1]
        Button:
            text: 'Reset Session'
            on_press: root.stop()
    Label:
        text: str(root.number)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
