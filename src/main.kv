<MainWidget>:
    GridLayout:
        size: root.size
        rows: 2
        padding: 10
        spacing: 10
        Label:
            text: str(root.timeString)
            text_size: self.size
            halign: 'center'
            valign: 'middle'
        GridLayout:
            size: root.size
            rows: 1
            padding: 10
            spacing: 10
            Button:
                text: 'Start Session'
                on_press: root.start()
                # Choose an image and uncomment:
                #background_down: 'button_pressed.png'
                #background_normal: 'button_normal.png'
                #color: [0, 0, 0, 1]
            Button:
                text: 'Reset Session'
                on_press: root.stop()
